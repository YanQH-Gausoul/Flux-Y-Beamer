% Blocks
\def\beamer@blockstylenative{native}%
\def\beamer@blockstylenobackground{nobackground}%
\def\beamer@blockstylemetropolis{metropolis}%
\def\beamer@blockstyleemph{emph}%

\newcommand{\setblockstyle}[1]{
	\def\beamer@blockstyle{#1}
	\ifx\beamer@blockstyle\beamer@blockstylenobackground%
		\setbeamercolor{block title}{fg= primaryLight,bg=background}%
   		\setbeamercolor{block body}{bg=background}%
   		\setbeamercolor{block title alerted}{fg=secondary,bg=background}%
   		\setbeamercolor{block body alerted}{bg=background}%
   		\setbeamercolor{block title example}{fg=tertiary,bg=background}%
  		\setbeamercolor{block body example}{bg=background}%
		% tbox color theme
		\setbeamercolor{default}{fg= primaryLight,bg=background}%
   		\setbeamercolor{alerted}{fg=secondary,bg=background}%
   		\setbeamercolor{example}{fg=tertiary,bg=background}%
		
	\else\ifx\beamer@blockstyle\beamer@blockstylemetropolis%
		\setbeamercolor{block title}{use=normal text,fg=primaryLight,bg=normal text.bg!90!fg}
		\setbeamercolor{block body}{use={block title, normal text},bg=block title.bg!50!normal text.bg}  
		\setbeamercolor{block title alerted}{fg=secondary,bg=normal text.bg!90!fg}
		\setbeamercolor{block body alerted}{use={block title, normal text},bg=block title.bg!50!normal text.bg}  
		\setbeamercolor{block title example}{fg=tertiary,bg=normal text.bg!90!fg}
	    	\setbeamercolor{block body example}{use={block title, normal text},bg=block title.bg!50!normal text.bg}
		% tbox color theme
		\setbeamercolor{default}{use={block title, normal text},fg=primaryLight,bg=block title.bg!50!normal text.bg}
		\setbeamercolor{alerted}{use={block title, normal text},fg=secondary,bg=block title.bg!50!normal text.bg}
		\setbeamercolor{example}{use={block title, normal text},fg=tertiary,bg=block title.bg!50!normal text.bg}

	\else\ifx\beamer@blockstyle\beamer@blockstyleemph%
    	\setbeamercolor{block title}{bg=primaryLight, fg=background}%
   		\setbeamercolor{block body}{bg=primaryLight, fg=background}%
   		\setbeamercolor{block title alerted}{bg=secondary!80, fg=background}%
   		\setbeamercolor{block body alerted}{bg=secondary!80, fg=background}%
   		\setbeamercolor{block title example}{bg=tertiary!80, fg=background}%
   		\setbeamercolor{block body example}{bg=tertiary!80, fg=background}%
		% tbox color theme
    		\setbeamercolor{default}{bg=primaryLight, fg=background}%
   		\setbeamercolor{alerted}{bg=secondary!80, fg=background}%
   		\setbeamercolor{example}{bg=tertiary!80, fg=background}%

    	\else% 
    	\setbeamercolor{block title}{bg=primaryLight, fg=background}%
   		\setbeamercolor{block body}{bg=normal text.bg!94!fg}%
   		\setbeamercolor{block title alerted}{bg=secondary!80, fg=background}%
   		\setbeamercolor{block body alerted}{bg=normal text.bg!94!fg}%
   		\setbeamercolor{block title example}{bg=tertiary, fg=background}%
   		\setbeamercolor{block body example}{bg=normal text.bg!94!fg}%
		% tbox color theme
   		\setbeamercolor{default}{bg=primaryLight, fg=background}%
   		\setbeamercolor{alerted}{bg=secondary!80, fg=background}%
   		\setbeamercolor{example}{bg=tertiary, fg=background}%
    \fi
\fi%
\fi
}
